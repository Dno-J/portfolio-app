# ===================== Auth & Security =====================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================== Admin Credentials =====================
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password

# ===================== Database =====================
DATABASE_URL=postgresql://<username>:<password>@<host>/<db_name>?sslmode=require&channel_binding=require

# ===================== App Environment =====================
ENV=production
PORT=8001

# ===================== CORS =====================
ALLOWED_ORIGINS='["http://localhost", "http://localhost:3000", "http://your-ec2-ip"]'

# ===================== Frontend Config =====================
REACT_APP_API_BASE_URL=http://your-ec2-ip

# ===================== Dev Tools =====================
CHOKIDAR_USEPOLLING=true
