# ==========================
# Backend
# ==========================
# Secret key for FastAPI JWT / security
SECRET_KEY=YOUR_SECRET_KEY_HERE

# Admin credentials
ADMIN_USERNAME=YOUR_ADMIN_USERNAME
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD

# Database URL (Postgres)
DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST:PORT/DBNAME?sslmode=require&channel_binding=require

# ==========================
# Frontend dev
# ==========================
# Needed for React live reload / polling
CHOKIDAR_USEPOLLING=true

# API base URL for React frontend
REACT_APP_API_URL=http://localhost:8000
